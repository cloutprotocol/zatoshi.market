# Zcash RPC Configuration
# Public RPC endpoint (can be used client-side)
NEXT_PUBLIC_ZCASH_RPC_URL=https://mainnet.zcashexplorer.app/api

# Private RPC credentials (server-side only - if using authenticated RPC)
ZCASH_RPC_USER=
ZCASH_RPC_PASSWORD=

# Blockchair API Key (optional - get one at https://blockchair.com/api to avoid rate limits)
# Server-side only for balance checking
BLOCKCHAIR_API_KEY=

# Tatum.io API Configuration (for blockchain RPC calls)
# Get a free key at https://tatum.io
TATUM_API_KEY=
TATUM_ZCASH_RPC_URL=https://zcash-mainnet.gateway.tatum.io/

# Optional: override consensus branch id (decimal or 0x-hex) if RPC is blocked
# ZCASH_CONSENSUS_BRANCH_ID=

# Zerdinals API Configuration
NEXT_PUBLIC_ZERDINALS_API_URL=https://zerdinals.com/api

# ZMAPS Configuration
NEXT_PUBLIC_ZMAPS_BLOCK_PRICE=0.10
NEXT_PUBLIC_ZMAPS_TOKEN_TICK=ZORE

# Platform Fee Display (client)
NEXT_PUBLIC_PLATFORM_FEE_ENABLED=false
NEXT_PUBLIC_PLATFORM_FEE_ZATS=20000

# Convex deployment selection (client)
# 1) Direct URL (overrides everything if set)
# NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
# 2) Or use env switch with per-env URLs
NEXT_PUBLIC_CONVEX_ENV=dev
NEXT_PUBLIC_CONVEX_URL_DEV=
NEXT_PUBLIC_CONVEX_URL_PROD=

